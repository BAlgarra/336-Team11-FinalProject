<%- include("partials/header.ejs")%>
<body class="bg-light">
  <div class="container py-5">
    <h1 class="text-center mb-5">Comic Finder</h1>

    <div class="card shadow p-4">
      <form action="/searchByKeyWord" class="mb-3">
        <div class="mb-3">
          <label for="keyword" class="form-label">Keyword:</label>
          <input
            type="text"
            name="keyword"
            class="form-control"
            placeholder="Enter keyword"
          />
        </div>
        <button class="btn btn-primary w-100">Search By Keyword</button>
      </form>
    </div>
  </div>
</body>
