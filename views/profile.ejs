<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Profile</title>

  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" rel="stylesheet" />
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js"></script>
  <link href="/css/styles.css" rel="stylesheet" />
</head>
<body>
  <%- include('partials/header.ejs') %>
  <%- include('partials/navbar.ejs') %>

  <div class="profileCard">
    <form action="/updateProfile" method="POST" class="profileUpdateForm">
      <div class="welcomeMessage">
        <h4>Hello <%= userInfo.user_name %></h4>
        <img src="<%= userInfo.pfp_url %>">
      </div>
      <p>Username</p>
      <input type="text" name="newUsername" value="<%= userInfo.user_name %>">
      <p>Email</p>
      <input type="text" name="newEmail" value="<%= userInfo.email %>">
      <p>Password</p>
      <input type="text" name="newPassword" value="<%= userInfo.password %>">
      <p>First Name</p>
      <input type="text" name="newFirstName" value="<%= userInfo.firstName %>">
      <p>Last Name</p>
      <input type="text" name="newLastName" value="<%= userInfo.lastName %>">
      <p>Profile Picture Url</p>
      <input type="text" name="newPfpUrl" value="<%= userInfo.pfp_url %>">
      <p>Sex</p>
      <div class="flexCol">
        <label>
          <input type="radio" name="sex" value="M" <%= userInfo.sex === 'm' ? "checked" : "" %>>
          Male
        </label>
        <label>
          <input type="radio" name="sex" value="F" <%= userInfo.sex === 'f' ? "checked" : "" %>>
          Female
        </label>
      </div>
      <button>update</button>
    </form>
  </div>

</body>

</html>